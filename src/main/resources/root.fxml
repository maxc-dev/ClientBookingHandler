<AnchorPane id="root" prefHeight="700.0" prefWidth="1200.0" stylesheets="@style/pane.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.maxc.ui.MainController">
    <Pane id="side-bar" prefHeight="700.0" prefWidth="311.0" stylesheets="@style/pane.css">
        <Pane id="sideBarVBox" layoutX="14.0" layoutY="14.0" prefHeight="125.0" prefWidth="282.0">
            <ImageView fx:id="userPicDisplay" fitHeight="48.0" fitWidth="48.0" layoutX="14.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@icons/default_pic.png" />
            </ImageView>
            <Label fx:id="userNameDisplay" id="sideBarUser" layoutX="14.0" layoutY="57.0" prefHeight="35.0" prefWidth="199.0" stylesheets="@style/text.css" text="User Name">
            </Label>
            <Label fx:id="userEmailDisplay" id="sideBarEmail" layoutX="14.0" layoutY="90.0" prefHeight="28.0" prefWidth="224.0" stylesheets="@style/text.css" text="email@example.com" />
            <Pane fx:id="logoutButton" id="imagePane" layoutX="238.0" layoutY="87.0" prefHeight="35.0" prefWidth="36.0"
                  stylesheets="@style/image.css">
                <ImageView fitHeight="24.0" fitWidth="24.0" layoutX="6.0" layoutY="6.0" pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="@icons/logout.png"/>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </ImageView>
            </Pane>
        </Pane>
        <Pane id="sideBarVBox" layoutX="14.0" layoutY="154.0" prefHeight="163.0" prefWidth="282.0">
            <HBox id="sideBarButtonContainer" layoutX="7.0" layoutY="7.0" prefHeight="42.0" prefWidth="271.0" stylesheets="@style/pane.css">
                <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/arrow_down.png" />
                </ImageView>
                <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/person.png" />
                </ImageView>
                <Label id="sideBarTitle" prefHeight="42.0" prefWidth="179.0" stylesheets="@style/text.css" text="Clients">
                </Label>
            </HBox>
            <HBox fx:id="addClientButton" id="sideBarButtonContainer" layoutX="44.0" layoutY="59.0" prefHeight="42.0" prefWidth="234.0" stylesheets="@style/pane.css">
                <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/arrow_right.png" />
                </ImageView>
                <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/add_person.png" />
                </ImageView>
                <Label id="sideBarTitle" prefHeight="42.0" prefWidth="179.0" stylesheets="@style/text.css" text="Add Client">
                </Label>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </HBox>
            <HBox fx:id="editClientButton" id="sideBarButtonContainer" layoutX="44.0" layoutY="111.0" prefHeight="42.0" prefWidth="234.0" stylesheets="@style/pane.css">
                <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/arrow_right.png" />
                </ImageView>
                <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@icons/edit.png" />
                </ImageView>
                <Label id="sideBarTitle" prefHeight="42.0" prefWidth="179.0" stylesheets="@style/text.css" text="Edit Client">
                </Label>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </HBox>
        </Pane>
    </Pane>
    <Pane id="content-pane" fx:id="contentPane" layoutX="309.0" prefHeight="700.0" prefWidth="917.0" stylesheets="@style/pane.css" />
</AnchorPane>
